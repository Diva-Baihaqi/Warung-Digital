ErrorDocument 404 /warung-digital/404.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /warung-digital/

    # Prevent directory listing
    Options -Indexes

    # Block access to git folders
    RewriteRule ^\.git - [F,L]
    
    # Block access to sensitive files
    RewriteRule ^composer\.(json|lock)$ - [F,L]
    RewriteRule ^package(-lock)?\.json$ - [F,L]
    RewriteRule ^\.env - [F,L]
    
    # Optional: Redirect non-existent files/folders to 404 (Apache does this by default, but this ensures it)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /warung-digital/404.php [L]
</IfModule>
